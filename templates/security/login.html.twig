{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block stylesheets %}

 <link rel="stylesheet" href="{{ asset('build/login_page.css') }}">

{% endblock %}

{% block body %}

 <div class="box__main-content">
   <div class="overlay__main-content"></div>

<div class="main-content__header">
    <div class="header__text" id="header__login">Sign In</div> 
</div>

<div class="main-content__body">



    <div class="box__login-form">

        <div class="row__box">
            <div class="text__left">Sign In</div>
            <a href="{{ path('register') }}" class="link__register">Create new account</a>
        </div>

        <div class="row__box">
            <form method="POST" action="{{ path('login') }}" class="form__login" novalidate>
                    
                <div class="row__form">
                    <input type="email" name="_email" required placeholder="Email" autocomplete="off" id="input__email">
                </div>

                <div class="row__form">
                    <input type="password" name="_password" required placeholder="Password" id="input__password">
                    {# <label for="" class="label__login-form"><span class="label__text">Password</span></label> #}
                </div>

                <div class="row__form">
                    <label class="label__checkbox">
                        <input type="checkbox" checked="checked" name="_remember_me">
                        <span class="checkmark"></span>

                        <div class="label__text">Remember me</div>
                    </label>
                    <a href="" class="link__forgot">Forgot Your Password?</a>   
                </div>

                <div class="row__form">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button class="btn__login-form" type="submit">Sign in</button>
                </div>

            </form>
        </div>

        {% if error %}
            <div class="row__box">
                {{ error.messageKey|trans(error.messageData, 'security')}}
            </div>
        {% endif %}
       




    </div>

    <div class="box__info">
        <div class="info__row">
         <div class="info__text">For full functionality test please sign in with test account or register new account</div>
        </div>
         <div class="info__row">
            <span>Email:</span>
            <span>test@gmail.com</span>
         </div>

        <div class="info__row">
            <span>Password:</span>
            <span>123456</span>
        </div>

        <div class="info__row">
            <button class="btn__info">Fill credentials</button>
        </div>
       
        
       
    </div>

</div>

 </div>

{% endblock %}


{% block javascripts %}
   <script src="{{ asset('build/login.js') }}"></script>
{% endblock %}